{
  "expo": {
    "name": "ble-showcase",
    "slug": "ble-showcase",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "plugins": ["react-native-ble-plx"],
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.xcapistr.bleshowcase"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.xcapistr.bleshowcase"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  },
  "experiments": {
    "tsconfigPaths": true
  }
}
